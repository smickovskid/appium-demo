{
    "require": [
        "ts-node/register"
    ],
    "extension": [
        "ts"
    ],
    "spec": "src/tests/**/*.ts",
    "timeout": 50000,
    "watch-files": [
        "src/tests/**/*.ts"
    ],
    "recursive": true,
    "reporter": "mochawesome",
    "reporterOptions": {
        "reportFilename": "customReportFilename",
        "quiet": true
    }
}