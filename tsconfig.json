{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@tests/*": [
                "tests/*"
            ],
            "@screens/*": [
                "screens/*"
            ]
        },
        "strict": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}